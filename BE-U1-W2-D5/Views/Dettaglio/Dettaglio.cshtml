
@model Guid
@{
    List<Scarpa> Dettagli = RepositoryObject.GetAll();
    Scarpa scarpa = Dettagli.Find(S => S.Id == Model);

}
<h1>Dettagli Articolo</h1>

<div class="card my-2" style="width: 18rem; height: 450px;">
<div>
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@scarpa.ImmagineDiCopertina" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@scarpa.ImmagineAggiuntiva" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@scarpa.ImmagineAggiuntiva2" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
</div>
    <div class="card-body">
        <h5 class="card-title">@scarpa.NomeArticolo</h5>
        <p class="card-text text-truncate">@scarpa.Descrizione</p>
        <p>Prezzo: Euro @scarpa.Prezzo</p>
    </div>
</div>